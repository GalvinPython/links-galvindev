---
interface Props {
  title?: string;
}

const { title = "Links" } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>{title} | GalvinDev</title>
  <meta property="og:title" content={`${title} | GalvinDev`} />
  <meta name="description" content="The official links site for GalvinDev." />
  <meta property="og:description" content="The official website for GalvinDev." />
  <meta name="theme-color" content="#ffdb00" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:creator" content="@egalvinyt" />
  <meta property="og:url" content="https://galvindev.me.uk" />
  <meta property="og:type" content="website" />
  <meta property="og:image" content="https://api.microlink.io/?url=https://links.galvindev.me.uk/&screenshot=true&embed=screenshot.url&overlay.browser=dark" />
  <meta name="msapplication-TileColor" content="#ffdb00" />
  <link
    rel="shortcut icon"
    href="/favicons/favicon.ico"
    type="image/x-icon"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/favicons/favicon-16x16.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/favicons/favicon-32x32.png"
  />
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/favicons/apple-touch-icon.png"
  />
  <link
    rel="mask-icon"
    color="#ffdb00"
    href="/favicons/favicon.svg"
  />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="robots" content="index,follow" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap");
    
    body {
      font-family: "Inter", sans-serif;
      height: 100%;
      margin: 0rem;
      overflow-x: hidden;
      overflow-y: auto;
      /* @apply bg-gradient-to-b from-[#696eff] to-[#30223f] text-white; */
      background: linear-gradient(180deg, rgba(105,110,255,1) 0%, rgba(48,34,63,1) 100%);
      color: white;
    }
  </style>
</head>
