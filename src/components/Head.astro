---
interface Props {
  title?: string;
}

const { title = "Links" } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>{title} | GalvinDev</title>
  <meta property="og:title" content={`${title} | GalvinDev`} />
  <meta name="description" content="All the links for GalvinDev/GalvinPython" />
  <meta property="og:description" content="All the links for GalvinDev/GalvinPython" />
  <meta name="theme-color" content="#ffdb00" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:creator" content="@egalvinyt" />
  <meta property="og:url" content="https://galvindev.me.uk" />
  <meta property="og:type" content="website" />
  <meta property="og:image" content="/_meta/og.jpg" />
  <meta name="msapplication-TileColor" content="#ffdb00" />
  <link
    rel="shortcut icon"
    href="/favicons/favicon.ico"
    type="image/x-icon"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/favicons/favicon-16x16.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/favicons/favicon-32x32.png"
  />
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/favicons/apple-touch-icon.png"
  />
  <link
    rel="mask-icon"
    color="#ffdb00"
    href="/favicons/favicon.svg"
  />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="robots" content="index,follow" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap");
    
    * {
      padding: 0%;
      margin: 0%;
    }

    html {
      font-family: "Inter", sans-serif;
      overflow-x: hidden;
      overflow-y: auto;
      background: #111;
      color: white;
      height: 100% !important;
    }

    body > * {
      flex-shrink: 0;
    }
  </style>
</head>
