---
import { Image } from "@astrojs/image/components";
import {
  FaMouse,
  FaHome,
} from "react-icons/fa";
import {
  SiBluesky,
  SiGithub,
  SiYoutube,
  SiTwitter ,
} from "react-icons/si"
import Head from "../components/Head.astro";
import LinkCard from "../components/LinkCard.astro";
import LinksContainer from "../components/LinksContainer.astro";
---

<html lang="en">
  <Head />
  <body class="my-16 flex flex-col items-center px-8">
    <header class="flex flex-col items-center">
      <Image
        src="/pfp.jpg"
        alt="GalvinPython Logo"
        format="jpg"
        width={96}
        height={96}
        class="rounded-full"
      />
      <h1 class="mt-4 text-3xl font-bold">Galvin</h1>
      <b class="text-md mb-2 mt-1">
        I'm a C#, JavaScript/TypeScript, and Python Developer, Video Editor, and YouTube Content Creator
      </b>
      <p class="text-md mb-8 mt-1">
        Also: GalvinDev, GalvinPython, Redblock, and Stats100.
      </p>
    </header>
    <main class="flex w-full flex-col gap-1">
      <LinksContainer title="Pinned">
        <LinkCard
          href="https://github.com/GalvinPython"
          title="GitHub"
          icon={SiGithub}
          color="#000"
        />
      </LinksContainer>
      
      <LinksContainer title="Website">
        <LinkCard
          href="https://galvindev.me.uk"
          title="Website"
          icon={FaHome}
          color="#000"
        />
        <LinkCard
          href="https://gc.galvindev.me.uk"
          title="Global Clicker"
          icon={FaMouse}
          color="#000"
        />
      </LinksContainer>
      
      <LinksContainer title="YouTube">
         <LinkCard
          href="https://youtube.com/@Stats100"
          title="Stats100"
          icon={SiYoutube}
          color="#f00"
        />
        <br />
        <LinkCard
          href="https://www.youtube.com/@nocontext"
          title="No Context JackSucksAtLife Editor"
          icon={SiYoutube}
          color="#f00"
        />
        <LinkCard
          href="https://www.youtube.com/@jacksucksatclips"
          title="JackSucksAtClips Editor"
          icon={SiYoutube}
          color="#f00"
        />
        <LinkCard
          href="https://www.youtube.com/@jacksucksatlife"
          title="JackSucksAtLife Subtitler"
          icon={SiYoutube}
          color="#f00"
        />
      </LinksContainer>
      
      <LinksContainer title="Other Social Media">
        <LinkCard
          href="https://twitter.com/egalvinyt"
          title="Twitter"
          icon={SiTwitter}
          color="#1DA1F2"
        />

        <LinkCard
          href="https://bsky.app/profile/galvin.bsky.social"
          title="Bluesky"
          icon={SiBluesky}
          color="#1DA1F2"
        />
      </LinksContainer>
    </main>
  </body>
</html>
